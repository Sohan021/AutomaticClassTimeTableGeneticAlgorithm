@model ClassTimeTable.Models.Domain.Room
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <h2 class="text-primary text-center">Create Room</h2>
        <form asp-action="Create" method="post">
            <div class="p-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <label asp-for="Number"></label>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <input asp-for="Number" class="form-control" />
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="text-center">
                        <label asp-for="StudentCapacity"></label>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <input asp-for="StudentCapacity" class="form-control" />
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                    <span asp-validation-for="StudentCapacity" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-primary " value="Save" />
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-3">
    </div>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
