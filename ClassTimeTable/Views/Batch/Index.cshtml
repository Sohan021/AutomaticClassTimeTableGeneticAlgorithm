@using ClassTimeTable.Models.Domain
@model IEnumerable<Batch>
@{
    ViewData["Title"] = "Index";
}
<br />
<h2 class="text-primary text-center">Batches</h2>
<br />
<div class="text-center">
    <a asp-action="Create" class="btn btn-outline-primary">Add New???</a>
</div>
<br />
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div>
            <table class="table table-hover table-bordered" id="myTable">
                <tr class="table-primary">
                    <th class="text-center">Name</th>
                    <th class="text-center">Batch_Code</th>
                    <th class="text-center">Courses</th>
                    <th class="text-center text-danger">Actions</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Name</td>
                        <td class="text-center">@item.BatchCode</td>
                        <td>
                            <a asp-action="GetCourseOfThisBatch" class="btn btn-outline-success" asp-route-id="@item.Id">
                                Courses
                            </a>
                        </td>
                        <partial name="_ButtonPartial" model="@item.Id" />
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="col-sm-3">
    </div>
</div>
