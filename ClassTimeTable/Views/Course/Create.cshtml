@model ClassTimeTable.Models.Domain.Course
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <h2 class="text-primary text-center">Create Course</h2>
        <form asp-action="Create" method="post">
            <div class="p-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <label asp-for="CourseTitle"></label>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <input asp-for="CourseTitle" class="form-control" />
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                    <span asp-validation-for="CourseTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <label asp-for="CourseCode"></label>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <input asp-for="CourseCode" class="form-control" />
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                    <span asp-validation-for="CourseCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <label asp-for="MaxNumOfStudents"></label>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <input asp-for="MaxNumOfStudents" class="form-control" />
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                    <span asp-validation-for="MaxNumOfStudents" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <label asp-for="InstructorId">Instructor</label>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <select asp-for="InstructorId" asp-items="ViewBag.iId" class="form-control"></select>
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                    <span asp-validation-for="InstructorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <label asp-for="BatchId">Batch</label>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-6">
                            <select asp-for="BatchId" asp-items="ViewBag.bId" class="form-control"></select>
                        </div>
                        <div class="col-3">
                        </div>
                    </div>
                    <span asp-validation-for="BatchId" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-primary " value="Save" />
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-3">
    </div>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
